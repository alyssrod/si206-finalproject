def create_database():
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()

    # Create table to store artist information
    c.execute('''
              CREATE TABLE IF NOT EXISTS artists (
                  id TEXT PRIMARY KEY,
                  name TEXT,
                  followers INTEGER,
                  popularity INTEGER
              )
              ''')

    # Create table to store songs
    c.execute('''
              CREATE TABLE IF NOT EXISTS songs (
                  id TEXT PRIMARY KEY,
                  name TEXT,
                  artist_id TEXT,
                  FOREIGN KEY (artist_id) REFERENCES artists(id)
              )
              ''')

    conn.commit()
    conn.close()

def insert_artist_info(artist_info):
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()

    # Insert or update artist information
    c.execute('''
              INSERT OR REPLACE INTO artists (id, name, followers, popularity)
              VALUES (?, ?, ?, ?)
              ''', (artist_info['id'], artist_info['name'], artist_info['followers']['total'], artist_info['popularity']))

    conn.commit()
    conn.close()

def insert_songs(songs, artist_id):
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()

    # Insert songs
    for song in songs:
        c.execute('''
                  INSERT INTO songs (id, name, artist_id)
                  VALUES (?, ?, ?)
                  ''', (song['id'], song['name'], artist_id))

    conn.commit()
    conn.close()

