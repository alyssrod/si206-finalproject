def setUpDatabase(db_name):
    path = os.path.dirname(os.path.abspath(__file__))
    conn = sqlite3.connect(path+'/'+db_name)
    cur = conn.cursor()
    return cur, conn

cur, conn = setUpDatabase('final-database.db')
    
def store_spotify_data(track, cur, conn): 
    try: 
        cur.execute("CREATE TABLE IF NOT EXISTS spotify_data (song_title TEXT, artist TEXT, album TEXT, popularity INTEGER)")
        song_title = track['name']
        artist = track['artists'][0]['name']
        album = track['album']['name']
        popularity = track['popularity']
        cur.execute("INSERT INTO spotify_data (song_title, artist, album, popularity) VALUES (?, ?, ?, ?)", (song_title, artist, album, popularity))
        conn.commit()
        print("Spotify data stored in the database successfully!")
    except Exception as e: 
        print(f"Error storing Spotify data: {str(e)}")

def create_database():
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()

    # Create table to store artist information
    c.execute('''
              CREATE TABLE IF NOT EXISTS artists (
                  id TEXT PRIMARY KEY,
                  name TEXT,
                  followers INTEGER,
                  popularity INTEGER
              )
              ''')

    # Create table to store songs
    c.execute('''
              CREATE TABLE IF NOT EXISTS songs (
                  id TEXT PRIMARY KEY,
                  name TEXT,
                  artist_id TEXT,
                  FOREIGN KEY (artist_id) REFERENCES artists(id)
              )
              ''')

    conn.commit()
    conn.close()

def insert_artist_info(artist_info):
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()


    c.execute('''
              INSERT OR REPLACE INTO artists (id, name, followers, popularity)
              VALUES (?, ?, ?, ?)
              ''', (artist_info['id'], artist_info['name'], artist_info['followers']['total'], artist_info['popularity']))

    conn.commit()
    conn.close()

def insert_songs(songs, artist_id):
    conn = sqlite3.connect('spotify_database.db')
    c = conn.cursor()

    for song in songs:
        song_id = song['id']

        c.execute("SELECT id FROM songs WHERE id=?", (song_id,))
        existing_song = c.fetchone()

        if existing_song is None:
            c.execute('''
                      INSERT INTO songs (id, name, artist_id)
                      VALUES (?, ?, ?)
                      ''', (song_id, song['name'], artist_id))

    conn.commit()
    conn.close()




create_database()


token = get_spotify_token()

artist_info = spotify_artist_search(token, "Beyonce")

if artist_info:

    insert_artist_info(artist_info)


    songs = spotify_get_songs_by_artist(token, artist_info)

    if songs:

        insert_songs(songs, artist_info['id'])


        for idx, song in enumerate(songs):
            print(f"{idx + 1}. {song['name']}")
    else:
        print("No tracks found for this artist.")
else:
    print("No artist found with this name.")


def get_songlink_data(song_url): 

    song_dict={}

    base="https://api.song.link/v1-alpha.1/links?url="
    link=song_url
    full_link=base+link

    response=requests.get(full_link)
    data=response.text
    data=json.loads(data)
    links=data["linksByPlatform"] 
    platforms=list(links.keys())

    title= data["entitiesByUniqueId"]
    title=list(title.values())
    title=title[0]["title"]
    song_dict[title]=(platforms,len(platforms))
    return(song_dict)

def store_songlink_data(data, cur, conn):
    cur.execute("CREATE TABLE IF NOT EXISTS songlink_data (title TEXT, number_platforms INTEGER)")   
    for item in data:
        for key in item:
            title=key
            number=item[key][1]
        cur.execute("INSERT INTO songlink_data (title,number_platforms) VALUES (?, ?)", (title, number))
    conn.commit()
    return None

